<div class="banner mb-4">
  <div class="banner-content text-center text-white">
    <h1 class="display-4 fw-bold">Welcome to the Dani's Cookbook</h1>
    <p class="lead">Explore recipes by category. Add your own favorites!</p>
  </div>
</div>

<h1 class="categories-heading text-center"><strong>All Categories</strong></h1>

<div class="container">
  <div class="row justify-content-center">
    <% @categories.each do |category| %>
  <% if category.image.attached? || category.image_url.present? %>
    <div class="col-md-3 col-sm-6 mb-4">
      <%= link_to category_path(category), class: "category-card-link" do %>
        <div class="category-card text-center">
          <% if category.image.attached? %>
            <%= image_tag category.image, alt: category.name, class: "category-img" %>
          <% else %>
            <%= image_tag category.image_url, alt: category.name, class: "category-img" %>
          <% end %>
          <h3 class="mt-2"><%= category.name %></h3>
        </div>
      <% end %>
    </div>
  <% end %>
<% end %>

<div class="col-md-3 col-sm-6 mb-4">
  <%= link_to new_category_path, class: "category-card-link" do %>
    <div class="category-card text-center d-flex flex-column align-items-center justify-content-center" style="height: 100%; padding: 30px;">
      <i class="fas fa-plus fa-2x mb-2"></i>
      <span>Add New Category</span>
    </div>
  <% end %>
</div>
